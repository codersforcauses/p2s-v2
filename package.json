{
  "private": true,
  "name": "p2s",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "npm": "^8"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail 'npm run client-dev' 'npm run server-dev'",
    "client-dev": "npm run serve --workspace=frontend",
    "server-dev": "npm run dev --workspace=backend",
    "start": "concurrently --kill-others-on-fail 'npm run client' 'npm run server'",
    "build": "npm run build --workspace=frontend",
    "client": "npm run start --workspace=frontend",
    "server": "npm run start -workspace=backend"
  },
  "dependencies": {
    "concurrently": "7.0.0"
  }
}

{
  "private": true,
  "name": "p2s",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "client-dev": "yarn workspace frontend serve",
    "client": "yarn workspace frontend build && yarn workspace frontend start",
    "server-dev": "yarn workspace backend dev",
    "server": "yarn workspace backend start",
    "dev": "concurrently --kill-others-on-fail 'yarn client-dev' 'yarn server-dev'",
    "start": "concurrently --kill-others-on-fail 'yarn client' 'yarn server'"
  },
  "dependencies": {
    "concurrently": "7.0.0"
  }
}
